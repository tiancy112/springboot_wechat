<!--pages/operation/operation.wxml-->
<view class='container'>
  <form bindsubmit='formSubmit' bindreset='formReset'>
    <view class='row'>
      <text>商品名称：</text>
      <input type='text' name='goodsName' placeholder='请输入商品名称' value='{{goodsName}}'></input>
    </view>
    <view class='row'>
      <text>价格：</text>
      <input type='text' name='goodsPrice' placeholder='请输入价格' value='{{goodsPrice}}'></input>
    </view>
    <view class='row'>
      <text>描述：</text>
      <input type='text' name='goodsDesc' placeholder='请输入商品描述' value='{{goodsDesc}}'></input>
    </view>
    <view class='row'>
      <button type='primary' form-type='submit'>提交</button>
      <button type='primary' form-type='reset'>重置</button>
    </view>
  </form>
</view>